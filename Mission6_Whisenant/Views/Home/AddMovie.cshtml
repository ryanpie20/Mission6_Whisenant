@model Mission6_Whisenant.Models.Movie

@{
    ViewData["Title"] = "Add Movie";
}
<h3>Oh Hey. You wanna add a movie to Joel's Movie Collection. Interesting...</h3>
<br />
<h6>I guess we will allows it.</h6>

<form method="post">

    <input type="hidden" asp-for="MovieId"/>

    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <br />
    <label asp-for="Title">Title</label>
    <input asp-for="Title" type="text" required />
    <br />
    <br />
    <label asp-for="Year">Year</label>
    <input asp-for="Year" type="number" min="1900" max="2099" required />
    <br />
    <br />
    <label asp-for="Director">Director</label>
    <input asp-for="Director" type="text" />
    <br />
    <br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <br />
    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <br />
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" type="text" />
    <br />
    <br />
    <label asp-for="CopiedToPlex">Copied to Plex</label>
    <select asp-for="CopiedToPlex">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <br />
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" type="text" maxlength="25" />
    <button type="submit">Add Movie</button>

    <div asp-validation-summary="All"></div>
</form>